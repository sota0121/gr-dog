    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno Debug (manual)", // Ref: https://github.com/denoland/vscode_deno/issues/384
            "request": "launch",
            "type": "pwa-node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-all",
                "${file}"
            ],
            "attachSimplePort": 9229
        }
    ]
}